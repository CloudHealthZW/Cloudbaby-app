<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:text="Drug" />

                <TextView
                    android:id="@+id/txtDrug"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:padding="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:text="Dosage" />

                <TextView
                    android:id="@+id/txtDosage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:padding="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:text="Centre ID" />

                <TextView
                    android:id="@+id/txtCentreId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:padding="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:padding="10dp"
                    android:text="Vaccine Against" />

                <TextView
                    android:id="@+id/txtVaccineAgainst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:padding="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Details" />

                <TextView
                    android:id="@+id/txtDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:padding="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Prescribed Date" />

                <TextView
                    android:id="@+id/txtPrescribedDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:padding="10dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>