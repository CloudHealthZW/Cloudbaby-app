<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.cloudbaby.co.zw.cloudybaby.biskypackage.activities.AddInfant">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:visibility="visible">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnChoose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="33dp"
                        android:background="#6b4242"
                        android:text="Choose Image"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/imgProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_below="@id/btnChoose"
                        android:layout_margin="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/placeholder" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <Spinner
                        android:id="@+id/spnType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"

                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="first name"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/edtLastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="other name"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/edtOtherName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="last name"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edtBcNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="birth certificate Number"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/spnGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="Your last name"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/edtDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="Date of Birth"
                        android:inputType="none"
                        android:editable="false"
                        android:clickable="true"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />


                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:maxLines="3"
                        android:padding="10dp"
                        android:text="Update"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
